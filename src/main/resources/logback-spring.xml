<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Keep using Spring Boot's defaults, but override the console pattern
         so logs include thread name and calling method (function). -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <!--
      Pattern fields:
        %d{...}           timestamp
        %-5level          log level
        [%thread]         thread name
        %logger{36}.%M    logger + method name (call-site).
      Note: %M requires caller data, which has a small performance cost; keep this enabled
      only if you need method names in production logs.
    -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%thread] %logger{36}.%M - %msg%n"/>

    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>

