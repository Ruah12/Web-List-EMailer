<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Test logging configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%thread] %logger{36}.%M - %msg%n"/>

    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <!-- App-specific logger levels for testing -->
    <logger name="com.kisoft" level="DEBUG" />

    <timestamp key="STARTUP_TS" datePattern="yyyy-MM-dd_HH-mm-ss"/>
    <property name="LOG_FILE" value="logs/test-${STARTUP_TS}.log"/>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%thread] %logger{36}.%M - %msg%n</pattern>
        </encoder>
        <append>false</append>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

</configuration>

